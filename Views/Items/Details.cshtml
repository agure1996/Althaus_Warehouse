@model Althaus_Warehouse.Models.DTO.ItemDTOs.GetItemDTO

<h2>Item Details</h2>
<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>In Stock:</strong> @(Model.InStock ? "Yes" : "No")</p>
    <p><strong>Item Type:</strong> @Model.ItemType?.Name</p>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id">Edit Item</a>
<a asp-action="Index">Back to List</a>
