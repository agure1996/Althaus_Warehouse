@model Althaus_Warehouse.Models.Entities.Item

@{
    ViewData["Title"] = "Delete Item";
}

<link rel="stylesheet" href="~/css/itemscss/deleteitem.css" />


<h3>Are you sure you want to delete this item?</h3>
<div>
    <p>Item Name: @Model.Name</p>
    <p>Item ID: @Model.Id</p>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary" style="margin-top=0">Cancel</a>
        </div>
    </form>
</div>
