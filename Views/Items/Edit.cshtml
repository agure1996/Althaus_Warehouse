@model Althaus_Warehouse.Models.DTO.ItemDTOs.UpdateItemDTO

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" />
        <span asp-validation-for="Quantity"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="ItemTypeId"></label>
        <select asp-for="ItemTypeId" asp-items="ViewBag.ItemTypes"></select>
        <span asp-validation-for="ItemTypeId"></span>
    </div>
    <button type="submit">Update Item</button>
</form>
