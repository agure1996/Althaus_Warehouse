@model Althaus_Warehouse.Models.DTO.EmployeeDTOs.CreateEmployeeDTO

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="EmployeeType"></label>
        <select asp-for="EmployeeType" asp-items="@(new SelectList(ViewBag.EmployeeTypes, "Value", "Text"))"></select>
        <span asp-validation-for="EmployeeType"></span>
    </div>
    <button type="submit">Create</button>
</form>
