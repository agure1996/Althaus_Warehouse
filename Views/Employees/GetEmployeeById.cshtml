@{
    ViewData["Title"] = "Get Employee by ID";
}

<h1>Get Employee by ID</h1>

<div>
    <label for="employeeId">Enter Employee ID:</label>
    <input type="number" id="employeeId" placeholder="Employee ID" />
    <button id="getEmployee">View Details</button>
</div>

<script>
    document.getElementById('getEmployee').onclick = function () {
        const id = document.getElementById('employeeId').value;
        if (id) {
            // Redirect to the GetById action with the specified ID
            window.location.href = `/Employees/Details?id=${id}`;
        } else {
            alert('Please enter a valid employee ID.');
        }
    };
</script>

<a class="btn btn-secondary" href="/Employees/Index">Back to Employee List</a>
