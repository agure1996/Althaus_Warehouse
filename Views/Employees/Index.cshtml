@model IEnumerable<Althaus_Warehouse.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<a class="btn btn-primary" asp-action="Create">Create New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Employee Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.EmployeeType.ToString()</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@employee.Id">View Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
